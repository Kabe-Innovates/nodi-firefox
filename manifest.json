{
  "manifest_version": 2,
  "name": "Nodi",
  "version": "1.0.0",
  "description": "Location-based website blocker for Firefox. Block distracting sites in your focus zones.",
  "author": "Kabe-Innovates",
  "homepage_url": "https://github.com/Kabe-Innovates/unNamed",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "nodi@kabe-innovates.dev",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "48": "public/icon-48.png",
    "96": "public/icon-96.png"
  },
  "browser_action": {
    "default_title": "Nodi",
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/icon-48.png",
      "32": "public/icon-48.png"
    }
  },
  "options_ui": {
    "page": "public/options.html",
    "browser_style": false
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
